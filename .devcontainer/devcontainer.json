{
  "name": "Minecraft Server Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "oven.bun-vscode"
      ]
    }
  },
  "postCreateCommand": "curl -fsSL https://bun.sh/install | bash && echo 'export PATH=\"$HOME/.bun/bin:$PATH\"' >> ~/.bashrc",
  "forwardPorts": [25565, 3000],
  "portsAttributes": {
    "25565": {
      "label": "Minecraft Server",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Web App",
      "onAutoForward": "openPreview"
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/serverfiles,target=/workspace/serverfiles,type=bind"
  ],
  "remoteUser": "vscode"
}